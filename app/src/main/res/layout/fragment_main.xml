<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mainActivity$PlaceholderFragment"
    android:weightSum="1"
    android:orientation="vertical">


    <WebView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:id="@+id/webView"
        android:layout_weight="1" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <ImageButton
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_button_lighting"
            android:id="@+id/lightingsButton"
            android:layout_weight="1"
            android:clickable="true"
            android:onClick="clickLighting" />

        <ImageButton
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_button_temperature"
            android:id="@+id/temperatureButton"
            android:layout_weight="1"
            android:onClick="clickTemp" />

        <ImageButton
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_button_lock"
            android:id="@+id/locksButton"
            android:layout_weight="1"
            android:onClick="clickLock" />

        <ImageButton
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_button_scenario"
            android:id="@+id/scenariosButton"
            android:layout_weight="1"
            android:onClick="clickScenario" />
    </LinearLayout>

</LinearLayout>
